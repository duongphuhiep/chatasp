@{ 
    ViewData["Title"] = "Home"; 
} 
@section GlobalInlineCss {
    <style>
        section { 
            padding: 50px 0px; 
        } 
        section.signin {
            background: #263238; 
            color:white;
        }
    </style>
}

<section class="signin">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>CHATASP</h1>
                <h2>A crowd free chatting forum</h2>
            </div>
            <div class="col-md-6">
                @await Component.InvokeAsync(nameof(Login))
            </div>
        </div>
    </div>
</section>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>Fantastic features!</h1>
                <ul>
                    <li>
                        <h2>Freedom</h2>
                    </li>
                    <li>
                        <h2>Anonymous</h2>
                    </li>
                    <li>
                        <h2>Security</h2>
                    </li>
                    <li>
                        <h2>Crowding</h2>
                    </li>
                </ul>
            </div>
            <div class="col-md-6">
                @{
                    Html.RenderPartial("RegisterUser");
                }
            </div>
        </div>
    </div>
</section>